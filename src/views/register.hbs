<div class="container d-flex justify-content-center align-items-center pt-5">
    <div class="col-md-6 col-sm-8">
        <form action="/api/users/register" method="POST">
            <h2 class="text-center mb-4">Registro de Usuario</h2>
            <div class="mb-3">
                <input type="text" class="form-control text-center" name="first_name" placeholder="Ingrese su Nombre" required />
            </div>
            <div class="mb-3">
                <input type="text" class="form-control text-center" name="last_name" placeholder="Ingrese su Apellido" required />
            </div>
            <div class="mb-3">
                <input type="email" class="form-control text-center" name="email" placeholder="Ingrese su Email" required />
            </div>
            <div class="mb-3">
                <input type="number" class="form-control text-center" name="age" placeholder="Ingrese su Edad" required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control text-center" name="password" placeholder="Ingrese su Contraseña" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Registrarse</button>
            </div>
        </form>
        <p class="mt-3 text-center ">
            <a href="/login" class="link-dark link-opacity-75-hover text-decoration-none">
                ¿Ya tienes cuenta? Iniciar sesión
            </a>
        </p>
    </div>
</div>